{
  "name": "event-management",
  "version": "1.0.0",
  "description": "A project built as part of a CAP Bootcamp organized by Globant",
  "repository": "https://github.com/Ash19-88/event-management-system.git",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^18"
  },
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^3.24.0",
    "@sap-cloud-sdk/http-client": "^3.24.0",
    "@sap-cloud-sdk/resilience": "^3.24.0",
    "@sap/cds": "^8.6.0",
    "@sap/cds-hana": "^2.0.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "express": "^4",
    "@cap-js/hana": "^1",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.8.0",
    "@cap-js/sqlite": "^1.7.7",
    "@sap/cds-dk": "^8"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "bp_destination",
          "path": "sap/opu/odata/sap/API_BUSINESS_PARTNER/"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  }
}
